# Server configuration
PORT=5000
NODE_ENV=development

# Database (Neon/Postgres) connection string
# Example Neon: postgres://USER:PASSWORD@HOST/db?sslmode=require
# Example Local: postgres://postgres:postgres@localhost:5432/newapp
DATABASE_URL=

# Session secret for express-session
SESSION_SECRET=change_me_to_a_long_random_string

# Stripe secret key (if payments used). Example: sk_test_...
STRIPE_SECRET_KEY=

# Replit Auth (only needed if deploying on Replit)
REPLIT_DOMAINS=
REPL_ID=
ISSUER_URL=https://replit.com/oidc

